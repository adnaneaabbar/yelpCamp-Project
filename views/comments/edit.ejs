<% include ../partials/header %>

<div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit your Comment on <%= campground.name %></h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="comment[text]" rows="10" required><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Edit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
        </div>
    </div>


<% include ../partials/footer %>